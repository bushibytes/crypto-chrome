head
  link(rel='stylesheet', href='../css/bootstrap.min.css')
  link(rel='stylesheet', href='../css/font-awesome.min.css')
  link(rel='stylesheet', href='../css/crypto-style.css')
body
  .container
    h1 crypto-chrome

    h2 Manage public keys
    table.table#public
      thead
        tr
          th Num.
          th Image
          th ID
          th Manage
      tbody
    form.form
      a#add-public-key.btn.btn-success(href='#public-key-modal', data-toggle='modal')
        i.icon-plus
        |  Add Public Key
      | &nbsp;
      textarea#public-key-to-add(placeholder='paste key')

    h2 Manage private keys
    table.table#private
      thead
        tr
          th Num.
          th Image
          th ID
          th Manage
      tbody
    form.form
      a#add-private-key.btn.btn-success(href='#private-key-modal', data-toggle='modal')
        i.icon-plus
        |  Add Private Key
      | &nbsp;
      textarea#private-key-to-add(placeholder='paste key')

  script(src="../js/vendor.js")
  script(src="../js/background.js")
  script(src="../js/crypto-chrome.js")
  script(src="../js/crypto-settings.js")
